<Alloy>
	<Window layout="vertical" backgroundColor="#f0f0f0">
		<Button title="Refresh Device List" id="refreshButton"
				width="60%" onClick="refreshDeviceList" top=20/>
		<TableView id="deviceTable" top=20 height="30%"
			backgroundColor="white" onClick="tableClick"/>
		<Button title="Connect" id="toggleConnectionButton"
			width="60%" onClick="toggleConnection" top=20/>
		<TextField hintText="Enter text to print" id="textInput"
			borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"
			returnKeyType="Ti.UI.RETURNKEY_SEND"
			width="90%" onReturn="print" top=20/>
	</Window>
</Alloy>